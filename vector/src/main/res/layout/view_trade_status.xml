<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#5E6687"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="26 Apr"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#5267E3"
                android:paddingBottom="4dp"
                app:cardElevation="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/tvDate" />

            <View
                android:id="@+id/view1"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="#5267E3"
                android:minHeight="20dp"
                app:layout_constraintBottom_toTopOf="@+id/dot2"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />


            <androidx.cardview.widget.CardView
                android:id="@+id/dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#5267E3"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/aceptTrade" />

            <View
                android:id="@+id/view2"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:layout_marginTop="-6dp"
                android:background="#5267E3"
                app:layout_constraintBottom_toTopOf="@+id/dot3"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/dot2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#5267E3"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/escrow" />

            <View
                android:id="@+id/view3"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:layout_marginTop="-6dp"
                android:background="#5267E3"
                app:layout_constraintBottom_toTopOf="@+id/dot4"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/dot3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dot4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#5267E3"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/complete" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/offered_trade"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toEndOf="@+id/cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dotTime"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#ffff"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView7"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="13.00 PM, by Alice"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/dotTime"
                app:layout_constraintStart_toEndOf="@+id/dotTime"
                app:layout_constraintTop_toTopOf="@+id/dotTime" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/aceptTrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/accept_the_trade"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView7"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView8" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dotTime2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#ffff"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView7"
                app:layout_constraintTop_toBottomOf="@+id/aceptTrade" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="13.00 PM, by Alice"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/dotTime2"
                app:layout_constraintStart_toEndOf="@+id/dotTime2"
                app:layout_constraintTop_toTopOf="@+id/dotTime2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/escrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/accept_the_trade"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView7"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView82" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/accept_the_trade"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView7"
                app:layout_constraintTop_toBottomOf="@+id/escrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>